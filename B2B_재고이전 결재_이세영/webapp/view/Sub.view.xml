<mvc:View controllerName="sync.e17.inventory4.controller.Sub"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml">

    <Page title="[직영점] 재고이전 결재페이지" id="subPage" showNavButton="true" navButtonPress="onNavBack" class="background-page">
        <content>
            <VBox class="sapUiResponsiveMargin" alignItems="Center">

                <Text text="" class="sapUiTinyMargin"/>
                <Text text="" class="sapUiTinyMargin"/>
                <HBox class="sapUiSmallMarginTop" alignItems="Center" justifyContent="Center">
                    <Title text="직영점 점장 로그인" level="H1" titleStyle="Bold" class="titleStyle"/>
                </HBox>
                
                <HBox class="sapUiSmallMarginTop" alignItems="Start">
                        
                    <VBox class="radioGroupContainer" width="100%">
                        <Label text="ID : 직영점 아이디 선택" design="Bold"/>
                        <RadioButtonGroup id="plantRadioGroup" columns="1" select="onPlantRadioSelect">
                            <buttons>
                                <RadioButton text="[CDC 생산공장] Plant ID : 10000" id="10000"/>
                                <RadioButton text="[RDC 중앙창고] Plant ID : 10001" id="10001"/>
                                <RadioButton text="[구로직영점] Plant ID : 10002" id="10002"/>
                                <RadioButton text="[평택직영점] Plant ID : 10003" id="10003"/>
                                <RadioButton text="[종로직영점] Plant ID : 10004" id="10004"/>
                                <RadioButton text="[인천직영점] Plant ID  :10005" id="10005"/>
                                <RadioButton text="[오산직영점] Plant ID : 10006" id="10006"/>
                                <RadioButton text="[대구직영점] Plant ID : 10007" id="10007"/>
                                <RadioButton text="[대전직영점] Plant ID : 10008" id="10008"/>
                                <RadioButton text="[부천직영점] Plant ID : 10009" id="10009"/>
                            </buttons>
                        </RadioButtonGroup>
                    </VBox>
                </HBox>
                
                <HBox class="sapUiSmallMarginTop" alignItems="Center">
                    <Label text="Password :" class="sapUiSmallMarginEnd" design="Bold"/>
                    <Input id="passwordInput" type="Password" placeholder="비밀번호 입력"/>
                </HBox>
                
                <Button text="재고이전신청 조회" press="onSearch" class="sapUiSmallMarginTop"/>
                
            </VBox>
        </content>
    </Page>
</mvc:View>
